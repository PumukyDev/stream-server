<?xml version="1.0"?>
<ices>
  <!-- Configuración de logging -->
  <logpath>/var/log/ices2</logpath>
  <logfile>ices.log</logfile>
  <loglevel>3</loglevel>
  
  <!-- Configuración del stream -->
  <stream>
    <metadata>
      <name>Radio Trampa</name>
      <genre>Pop</genre>
      <description>Transmisión de audio en vivo</description>
    </metadata>
    
    <input>
        <module>playlist</module>
        <param name="type">basic</param>
        <param name="file">/home/alumno/canciones/lista.txt</param>
        <!-- random play -->
        <param name="random">0</param>
        <!-- si la lista de reproducción se actualiza, empieza desde el principio -->
        <param name="restart-after-reread">0</param>
        <!-- si está configurado en 1, reproduce una vez y luego se detiene -->
        <param name="once">0</param>
    </input>
    
    <instance>
      <!-- Datos para conectarse al servidor Icecast -->
      <hostname>icecast</hostname>
      <port>8000</port>
      <password>hackme</password>
      <!-- Mount point en el servidor Icecast -->
      <mount>/supertramp</mount>
      <yp>1</yp>
      <name>Radio Trampa</name>
      <genre>Pop</genre>
      <description>Radio en vivo desde un bot de Telegram</description>

      <reconnectdelay>2</reconnectdelay>
      <reconnectattempts>5</reconnectattempts>
      
      <!-- 1 para hacerlo público -->
      <public>1</public>
    </instance>
  </stream>
</ices>
